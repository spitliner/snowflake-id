{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "inlineSourceMap": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["tests", "dist", "eslint.config.mjs"],
}